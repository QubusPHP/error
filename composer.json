{
	"name": "qubus/error",
	"description": "Package for Error handling.",
	"keywords": ["error", "error-handler", "error-handling"],
	"homepage": "https://github.com/QubusPHP/error",
	"license": "MIT",
	"authors": [
		{
			"name": "Joshua Parker",
			"email": "joshua@joshuaparker.dev"
		}
	],
	"require": {
		"php": ">=8.2",
		"filp/whoops": "^2.18",
		"qubus/log": "^3"
	},
	"require-dev": {
		"pestphp/pest": "^3.8",
		"qubus/qubus-coding-standard": "^1",
		"squizlabs/php_codesniffer": "^3"
	},
	"autoload": {
		"psr-4": {
			"Qubus\\Error\\": ""
		},
		"files": [
			"Helpers/core.php"
		]
	},
	"scripts": {
		"cs-check": "phpcs",
		"cs-fix": "phpcbf"
	},
	"config": {
		"optimize-autoloader": true,
		"sort-packages": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"pestphp/pest-plugin": true
		}
	}
}
