{
	"name": "qubus/error",
	"description": "Package for Error handling.",
	"keywords": ["error", "error-handler", "error-handling"],
	"homepage": "https://github.com/QubusPHP/error",
	"license": "MIT",
	"authors": [
		{
			"name": "Joshua Parker",
			"email": "josh@joshuaparker.blog"
		}
	],
	"require": {
		"php": ">=8.1",
		"qubus/log": "^2.0"
	},
	"require-dev": {
		"laminas/laminas-coding-standard": "^2.0",
		"phpunit/phpunit": "^9.0",
		"squizlabs/php_codesniffer": "^3.5"
	},
	"autoload": {
		"psr-4": {
			"Qubus\\Error\\": ""
		},
		"files": [
			"Helpers/core.php"
		]
	},
	"scripts": {
		"cs-check": "phpcs",
		"cs-fix": "phpcbf"
	},
	"config": {
		"optimize-autoloader": true,
		"sort-packages": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
